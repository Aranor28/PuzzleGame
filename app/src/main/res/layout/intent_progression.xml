<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/progression"
    android:columnOrderPreserved="true"
    android:useDefaultMargins="true"
    android:background="#FF9900">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Facile"
                android:id="@+id/facile"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Moyen"
                android:id="@+id/moyen"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Difficile"
                android:id="@+id/difficile"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="88dp"
                android:id="@+id/imageMer"
                android:src="@drawable/mer"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facileMer"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moyenMer"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/difficileMer"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="88dp"
                android:id="@+id/imageDesert"
                android:src="@drawable/desert"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facileDesert"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moyenDesert"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/difficileDesert"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="88dp"
                android:id="@+id/imageMontagne"
                android:src="@drawable/montagnes1"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facileMontagne"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moyenMontagne"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/difficileMontagne"
                android:src="@drawable/faux"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Principal"
            android:id="@+id/buttonMenu"
            android:layout_gravity="right" />
    </LinearLayout>
</RelativeLayout>