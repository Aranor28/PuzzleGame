<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FF9900">

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.ups.adrianetanais.puzzlegame.PlateauPuzzle"
        android:id="@+id/plateauPuzzle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="0dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facile"
        android:id="@+id/facile"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:minWidth="150dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pour jouer, veuillez choisir un niveau :"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:textStyle="italic"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moyen"
        android:id="@+id/moyen"
        android:layout_below="@+id/facile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="150dp"
        android:textStyle="italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dfficile"
        android:id="@+id/difficile"
        android:layout_below="@+id/moyen"
        android:layout_alignRight="@+id/moyen"
        android:layout_alignEnd="@+id/moyen"
        android:minWidth="150dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="60dp"
        android:typeface="sans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:id="@+id/buttonQuitter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/buttonProgression"
        android:layout_alignStart="@+id/buttonProgression"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progression"
        android:id="@+id/buttonProgression"
        android:layout_above="@+id/buttonQuitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placements alÃ©taoires"
        android:id="@+id/checkBoxAleatoire"
        android:layout_below="@+id/facile"
        android:layout_alignLeft="@+id/buttonProgression"
        android:layout_alignStart="@+id/buttonProgression"
        android:layout_alignParentEnd="true"
        android:textColor="#ff0e0dff" />

</RelativeLayout>
